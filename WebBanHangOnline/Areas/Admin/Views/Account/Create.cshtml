@model WebBanHangOnline.Models.CreateAccountViewModel
@{
    ViewBag.Title = "Thêm mới tài khoản";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section naviheader{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/home" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/account" class="nav-link">Danh sách tài khoản</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">Thêm mới tài khoản</a>
        </li>
    </ul>
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Thêm mới tài khoản</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Danh sách tài khoản</a></li>
                    <li class="breadcrumb-item active">Thêm mới tài khoản</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Thêm mới tài khoản</h3>
        </div>
        <div class="card-body">
            <div class="bs-stepper-content">
                @using (Html.BeginForm("CreateRegister", "Account", FormMethod.Post, new { }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    <!-- your steps content here -->
                <div id="logins-part" class="content" role="tabpanel" aria-labelledby="logins-part-trigger">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Tài khoản</label>
                        @Html.TextBoxFor(x => x.UserName, new { @class = "form-control" })
                        @*@Html.ValidationMessageFor(x => x.Title, null, new { @class = "text-danger" })*@
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Họ tên</label>
                        @Html.TextBoxFor(x => x.FullName, new { @class = "form-control" })
                        @*@Html.ValidationMessageFor(x => x.Title, null, new { @class = "text-danger" })*@
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Email</label>
                        @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                        @*@Html.ValidationMessageFor(x => x.Title, null, new { @class = "text-danger" })*@
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Phone</label>
                        @Html.TextBoxFor(x => x.Phone, new { @class = "form-control" })
                        @*@Html.ValidationMessageFor(x => x.Title, null, new { @class = "text-danger" })*@
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Quyền</label>
                        @Html.DropDownListFor(x => x.Role, ViewBag.Role as SelectList, "- Chọn quyền", new { @class = "form-control" })
                        @*@Html.ValidationMessageFor(x => x.Title, null, new { @class = "text-danger" })*@
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Mật khẩu</label>
                        @Html.PasswordFor(x => x.Password, new { @class = "form-control" })
                        @*@Html.ValidationMessageFor(x => x.Title, null, new { @class = "text-danger" })*@
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Nhập lại mật khẩu</label>
                        @Html.PasswordFor(x => x.ConfirmPassword, new { @class = "form-control" })
                        @*@Html.ValidationMessageFor(x => x.Title, null, new { @class = "text-danger" })*@
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Thêm mới</button>

                    </div>
                </div>
                }

            </div>
        </div>
        <!-- /.card-body -->
        <div class="card-footer">

        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->
